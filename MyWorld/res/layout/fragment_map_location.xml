<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.025" />

   <LinearLayout
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_weight="0.95"
        android:background="@drawable/detail_bg"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/fragment_map_location_nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="昵称：舟山俩"
                android:textColor="#436CAA"
                android:textSize="15sp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
				<View
                    android:layout_width="25dp"
                    android:layout_height="0dp" />
                <ImageView
                    android:id="@+id/fragment_map_location_call_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/contact" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/fragment_map_location_sendmessage_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/sendmessage" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/fragment_map_location_gohere_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/tothere" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_map_location_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fragment_map_location_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:paddingLeft="10dp"
                android:text="距离：1Km"
                android:textColor="#525252"
                android:textSize="15sp" />

            <View
                android:layout_width="25dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_map_location_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingLeft="10dp"
            android:text="地址：广州市海珠区新港西路125号"
            android:textColor="#525252"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.025" />

</LinearLayout>