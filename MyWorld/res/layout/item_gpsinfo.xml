<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        
        <com.org.mwd.view.RoundImageView
          android:id="@+id/activity_groupmember_list_item_memberphoto_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty"
            android:scaleType="centerInside"
            android:src="@drawable/xiaoxi" />

        <TextView
            android:id="@+id/activity_groupmember_list_item_membername_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activity_groupmember_list_item_memberphoto_iv"
            android:text="王晓慧"
            android:textColor="#34aefa"
            android:textSize="20sp" />
        
    </RelativeLayout>

<View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffffff"/>
</LinearLayout>